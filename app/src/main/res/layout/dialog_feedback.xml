<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ddd"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Indique uma nota geral sobre o pedido"
            android:background="@color/corMarromClaro"
            android:textColor="@color/corBranco"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/text_titulo_pg"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:spinnerMode="dialog"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/spinner_feedback"
            android:background="#fff"
            android:gravity="center">
        </Spinner>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/corMarromClaro"
            android:textColor="@color/corBranco"
            android:text="Selecionar"
            android:id="@+id/btn_salvar_feedback"/>
    </LinearLayout>

</LinearLayout>