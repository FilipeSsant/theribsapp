<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_perfil_cliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/img_user"
            android:background="@drawable/standarduser"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:id="@+id/text_view_login"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beatriz da Silva Castro"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_nome"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celular: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(11)97024-1518"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_celular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(11)7024-1518"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_telefone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="biiacastro@outlook.com"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_email"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logradouro: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar do Zé"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_logradouro"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="102"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_numero"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bairro: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jardim Silveira"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_bairro"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jardim Silveira"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_rua"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CARTÃO DE CRÉDITO"
            android:textColor="@color/corVinho"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bandeira: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visa"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_bandeira_cartao"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Nome Registrado: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEATRIZ CASTRO"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_nome_cartao"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Número do Cartão: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000 0000 0000 0000"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_numero_cartao"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:layout_marginRight="20dp"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_cvv_cartao"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vencimento: "
                android:textColor="@color/corVinho"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/2017"
                android:textColor="@color/corPreto"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/text_view_vencimento_cartao"/>

        </LinearLayout>



    </LinearLayout>

</ScrollView>
