        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.theribssh.www.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_produtos"></com.theribssh.www.MyListView>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/corAzulMarinho"
        android:padding="5dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Charmar garÃ§om"
            android:background="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="R$ 1 000,00"
            android:gravity="right|center"
            android:paddingRight="5dp"
            android:textSize="18dp"
            android:textColor="@color/corVerde"
            android:id="@+id/text_precoTotal"/>
    </LinearLayout>
</LinearLayout>