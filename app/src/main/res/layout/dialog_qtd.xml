<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Selecione uma quantidade"
        android:gravity="center"
        android:textColor="@color/corLaranja"
        android:background="@color/corAzulMarinho"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ddd"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:scaleType="fitXY"
            android:id="@+id/btn_diminuir"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/edit_text_qtd"
            android:gravity="center"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ddd"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:scaleType="fitXY"
            android:id="@+id/btn_aumentar"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/corAzulMarinho"
        android:text="COMFIRMAR"
        android:textColor="@color/corLaranja"
        android:id="@+id/btn_confirmar"/>
</LinearLayout>