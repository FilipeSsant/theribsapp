<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp" android:gravity="center"
    android:paddingTop="10dp"
    >

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="@drawable/transparente"
        android:scaleType="fitXY"
        android:id="@+id/btn_img_abaixo"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="-40dp"
        android:id="@+id/txt_acima"
        android:text="Test"
        android:textColor="@color/corLaranja"
        android:background="@color/corAzulMarinho"
        android:gravity="center"
        android:textSize="30dp"/>

</LinearLayout>