<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">
        <br.com.theribssteakhouse.www.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_pedidos"></br.com.theribssteakhouse.www.MyListView>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_marginTop="-50dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CRIAR UM NOVO PEDIDO"
            android:textColor="#ff720e"
            android:background="#11202a"
            android:id="@+id/btn_criar_pedido"/>
    </LinearLayout>

</LinearLayout>