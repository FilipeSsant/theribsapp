<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/transparente"
                    android:id="@+id/img_btn_pesquisa"
                    android:background="@drawable/ic_search_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Pesquisar"
                    android:gravity="center|left"
                    android:textSize="20dp"
                    android:id="@+id/txt_pesquisar"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#11202a"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:gravity="center">

                    <android.support.v4.view.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/sliderHome">
                    </android.support.v4.view.ViewPager>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="250dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:layout_marginTop="-250dp">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                        android:id="@+id/btnSliderLeft"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="250dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-250dp"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:id="@+id/btnSliderRight"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#fff"
                    android:background="@color/corMarromEscuro"
                    android:text="Nossos Menus"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.theribssh.www.MyListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/list_menu"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="24dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="#fff"
                        android:background="@color/corMarromEscuro"
                        android:text="Sobre NÃ³s"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="15dp"
                        android:layout_gravity="center_horizontal|left"
                        android:textSize="18dp"
                        android:id="@+id/txt_desc_sobrenos"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>