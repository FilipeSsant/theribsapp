<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/corMarromEscuro"
            android:text="Confirmação"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/corBranco"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Você tem certeza que deseja excluir este produto ?"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/corVinho"
                android:text="SIM"
                android:textColor="@color/corBranco"
                android:textSize="20dp"
                android:id="@+id/btn_sim"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/corVerde"
                android:text="NÃO"
                android:textColor="@color/corBranco"
                android:textSize="20dp"
                android:id="@+id/btn_nao"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>